@page
@model Project_zarzadzanie_studentami.Pages.SelectPresence.SelectPresenceModel

<h4>Presence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label" asp-for="Presence.StudentName">Wybierz studenta</label>
                <select class="form-select" asp-for="Presence.StudentName">
                    <option value="">--Wybierz--</option>
                    @foreach (var student in Model.Students)
                    {
                        <option value="@student.Name">@student.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Presence.SubjectName">Wybierz przedmiot</label>
                <select class="form-select" asp-for="Presence.SubjectName">
                    <option value="">--Wybierz--</option>
                    @foreach (var subject in Model.Subjects)
                    {
                        <option value="@subject.Name">@subject.Name</option>
                    }
                </select>
            </div>
            <br />
            <label asp-for="Presence.PresenceData">Data:</label>
            <input type="date" asp-for="Presence.PresenceData"/>
            <br />
            <label asp-for="Presence.IsPresent">Obecny:</label>
            <input type="checkbox" asp-for="Presence.IsPresent"/>
            <br />
            <div class="form-group">
                <input type="submit" value="Zaznacz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
